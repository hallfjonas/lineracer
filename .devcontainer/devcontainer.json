{
    "name": "Line Racer Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "streetsidesoftware.code-spell-checker",
                "mhutchie.git-graph",
                "github.vscode-github-actions"
            ]
        }
    },
    "postCreateCommand": "flit install --symlink --deps=all && echo 'Line Racer dev container is ready!'"
}