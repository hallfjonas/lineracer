{
    "name": "Line Racer Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "streetsidesoftware.code-spell-checker",
                "mhutchie.git-graph",
                "github.vscode-github-actions"
            ]
        }
    },
    "containerEnv": {
        "FLIT_ROOT_INSTALL": "1"
    },
    "postCreateCommand": "pip install flit && flit install --symlink" // Install the package in editable mode
}

